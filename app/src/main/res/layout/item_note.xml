<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/CV"
    android:layout_marginTop="@dimen/CV"
    android:layout_marginEnd="@dimen/CV"
    android:layout_marginBottom="@dimen/CV"
    tools:backgroundTint="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginLeft="@dimen/start_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginEnd="@dimen/end_margin"
            android:layout_marginRight="@dimen/end_margin"
            tools:text="Kotlin forever" />

        <TextView
            android:id="@+id/body"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_margin"
            tools:text="Я Kotlin бы выучил только за то, что на нем разрабатывал Вортон!" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
